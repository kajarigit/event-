{
  "name": "event-management-backend",
  "version": "1.0.0",
  "description": "Event Management System - Backend API (PostgreSQL + Express)",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "db:create": "psql -U postgres -c 'CREATE DATABASE event_management'",
    "db:schema": "psql -U postgres -d event_management -f database/schema.sql",
    "db:seed": "psql -U postgres -d event_management -f database/seed.sql",
    "db:setup": "npm run db:create && npm run db:schema && npm run db:seed",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS event_management' && npm run db:setup",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "cleanup": "powershell -ExecutionPolicy Bypass -File cleanup-mongodb.ps1"
  },
  "keywords": [
    "event-management",
    "qr-code",
    "postgresql",
    "express",
    "sequelize",
    "aws",
    "aws-deployment"
  ],
  "author": "Sourav Mukhopadhyay",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "^7.100.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.10",
    "papaparse": "^5.4.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pm2": "^5.3.0",
    "qrcode": "^1.5.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.11",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "axios": "^1.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
